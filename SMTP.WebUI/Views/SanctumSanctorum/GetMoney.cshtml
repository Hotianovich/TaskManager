<div class="row row-center" id="menu" style="width: 100%;">
    <div class="col-md-offset-1 col-md-10">
        <div class="panel panel-default my-tasks">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="row">
                            <div class="col-md-12">
                                <img src="~/Content/Images/wallerbackground.png" class="man" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-12">
                                <h1>Укажите период.</h1>
                            </div>
                            @using (Ajax.BeginForm("RezultMoney", null, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "results" }, new { @role = "form", @id = "myForm" }))
                            {
                                <div class="col-md-3">
                                    <div class="calendaric">
                                        <div class="first-date">
                                            @Html.Editor("to", new { htmlAttributes = new { @class = "text-editor-calendar", @placeholder = "гггг/мм/дд" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="calendaric">
                                        <div class="calendar-money">
                                            @Html.Editor("from", new { htmlAttributes = new { @class = "text-editor-calendar", @placeholder = "гггг/мм/дд" } })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="inp">
                                        <input id="save-task" type="submit" value="Узнать" class="btn save-t" />
                                    </div>
                                </div>
                            }
                            
                        </div>
                        <div class="row">
                            <div class="col-lg-offset-1 col-md-10">
                                <div id="results">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!--/panel-body-->
        </div><!--/panel-->
    </div>
</div>
